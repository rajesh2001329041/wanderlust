<%=layout("/layouts/boilerplate")%>

    <body>
        <div class="row mb-4 mt-3" >
            <div class="col-6 offset-2">
                <h2>Create new listing</h2>
                <form class="needs-validation" action="/listings" method="post"  novalidate>
                    <div class="mb-3">
                        <label for="title" class="form-lable">Title</label>
                        <input type="text" name="listing[title]" class="form-control" placeholder="Add a catchy Title" required>
                        <div class="valid-feedback">
                            Looks good!
                          </div>
                    </div>
                    <div class="mb-3">
                        <label for="">Description</label>
                        <textarea name="listing[description]" class="form-control" cols="30" rows="3" required></textarea>
                        <div class="invalid-feedback">
                            Please provide description
                          </div>
                    </div>
                    <div class="mb-3">
                        <label for="" class="form-lable">Img Link</label>
                        <input type="url" name="listing[image]" class="form-control"
                            placeholder="Enter image URL/Link">
                    </div>
                    <div class="row">
                            <div class="mb-3 col-md-5">
                                <label for="" class="form-lable">Price</label>
                                <input name="listing[price]" class="form-control" placeholder="1200" required>
                                <div class="invalid-feedback">
                                    Enter valid price.
                                  </div>
                            </div>
                            <div class="mb-3 col-md-5">
                                <label for="" class="form-lable">Location</label>
                                <input type="text" name="listing[location]" class="form-control" placeholder="India" required>
                                <div class="invalid-feedback">
                                   Enter  valid location.
                                  </div>
                            </div>
                    </div>
                    <div class="mb-3">
                        <label for="" class="form-lable">Country</label>
                        <input type="text" name="listing[country]" class="form-control" placeholder="Cuttack" required>
                        <div class="invalid-feedback">
                            Enter valid country
                          </div>
                    </div>
                    <button class="btn btn-dark add-btn">Add</button>
                </form>
            </div>
        </div>
    </body>